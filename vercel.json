{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/api/topics/initial/**": {
      "memory": 1536,
      "maxDuration": 30
    },
    "app/api/admin/seed/**": {
      "memory": 1536,
      "maxDuration": 30
    },
    "app/api/**/*": {
      "memory": 1024,
      "maxDuration": 15
    }
  },
  "env": {
    "VERCEL": "true",
    "NODE_ENV": "production"
  }
} 